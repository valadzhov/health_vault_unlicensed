    <div class="row-layout group_8">
        <div class="column-layout group_1">
            <h6 class="content">
                Dermatology Appointment
            </h6>
            <div class="column-layout group_9">
                <div class="row-layout group_10">
                    <IgbAvatar Src="assets/Avatar4.png" Shape="AvatarShape.Circle" class="avatar" appointments-scope></IgbAvatar>
                    <div class="column-layout group_11">
                        <p class="typography__subtitle-2 text_1">
                            Dr. Michael Matthews
                        </p>
                        <p class="typography__body-2 text_1">
                            Internal Medicine
                        </p>
                    </div>
                </div>
                <IgbList class="list" appointments-scope>
                    <IgbListItem>
                        <IgbAvatar slot="start" Shape="AvatarShape.Circle" class="avatar_1 avatar_1_1" appointments-scope>
                            <span class="material-icons icon_1">
                                calendar_today
                            </span>
                        </IgbAvatar>
                        <div slot="title">Tuesday, January 24, 2023</div>
                    </IgbListItem>
                    <IgbListItem>
                        <IgbAvatar slot="start" Shape="AvatarShape.Circle" class="avatar_1 avatar_1_2" appointments-scope>
                            <span class="material-icons icon_1">
                                access_time
                            </span>
                        </IgbAvatar>
                        <div slot="title">2:30pm - 2:45pm</div>
                    </IgbListItem>
                    <IgbListItem>
                        <IgbAvatar slot="start" Shape="AvatarShape.Circle" class="avatar_1 avatar_1_3" appointments-scope>
                            <span class="material-icons icon_1">
                                location_on
                            </span>
                        </IgbAvatar>
                        <div slot="title">Plainsboro Clinic </div>
                        <div slot="subtitle">1 Plainsboro Rd. Plainsboro, NJ 08536</div>
                    </IgbListItem>
                </IgbList>
            </div>
            <div class="column-layout group_9">
                <p class="typography__subtitle-2 text_2">
                    REQUIREMENTS
                </p>
                <div class="column-layout group_12">
                    <p class="typography__body-2 content">
                        - Recommended shower before appointment.
                    </p>
                    <p class="typography__body-2 content">
                        - Wear loose comfortable clothing.
                    </p>
                    <p class="typography__body-2 content">
                        - Avoid using makeup or nail polish before appointment.
                    </p>
                    <p class="typography__body-2 content">
                        - Don't try any new skin care products in the days prior to your appointment.
                    </p>
                    <p class="typography__body-2 content">
                        - Take your medications as scheduled. Your dermatologist needs to know their effects on your skin.

                    </p>
                </div>
            </div>
            <div class="row-layout group_13">
                <IgbButton Variant="ButtonVariant.Flat" DisplayType="ButtonBaseType.Button" @onclick="@(e => _cancelApptDialog!.ToggleAsync())" class="button" appointments-scope>
                    <span class="material-icons">
                        close
                    </span>
                    <span>CANCEL</span>
                    <IgbRipple></IgbRipple>
                </IgbButton>
                <IgbButton DisplayType="ButtonBaseType.Button" class="button button_2" appointments-scope>
                    <span class="material-icons">
                        calendar_today
                    </span>
                    <span>Add to Calendar</span>
                    <IgbRipple></IgbRipple>
                </IgbButton>
            </div>
        </div>
    </div>
    <IgbDialog CloseOnOutsideClick="true" @ref="_cancelApptDialog">
        <h5 slot="title">
            Appointment Cancellation
        </h5>
        <p class="typography__body-1 text_1">
            Are you sure you want to cancel your appointment?
        </p>
        <div slot="footer">
            <IgbButton Variant="ButtonVariant.Flat" DisplayType="ButtonBaseType.Button" @onclick="@(e => _cancelApptDialog!.ToggleAsync())" class="button_1" appointments-scope>
                No, go back
                <IgbRipple></IgbRipple>
            </IgbButton>
            <IgbButton Variant="ButtonVariant.Flat" DisplayType="ButtonBaseType.Button" @onclick="@(e => _cancelApptDialog!.ToggleAsync())" class="button_1 button_1_1" appointments-scope>
                Yes, cancel
                <IgbRipple></IgbRipple>
            </IgbButton>
        </div>
    </IgbDialog>
</div>

@code {
    private IgbDialog _cancelApptDialog;
